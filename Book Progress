<script>
const API = "https://ta.wikisource.org/w/api.php?origin=*";
let chartInstance = null;

async function analyzeBook() {
    const book = document.getElementById("bookTitle").value.trim();
    if (!book) return alert("родропро╡рпБроЪрпЖропрпНродрпБ рокрпБродрпНродроХрокрпН рокрпЖропро░рпИ роЙро│рпНро│ро┐роЯро╡рпБроорпН!");

    document.getElementById("loader").style.display = "block";
    document.getElementById("results").style.display = "none";

    try {
        // 1. рокрпБродрпНродроХродрпНродро┐ройрпН рокроХрпНроХроЩрпНроХро│рпИроХрпН роХрогрпНроЯро▒ро┐родро▓рпН
        const listUrl = `${API}&action=query&list=allpages&apprefix=${encodeURIComponent(book)}&apnamespace=104&aplimit=500&format=json`;
        const listRes = await fetch(listUrl).then(r => r.json());

        if (!listRes.query || !listRes.query.allpages || listRes.query.allpages.length === 0) {
            throw new Error("рооройрпНройро┐роХрпНроХро╡рпБроорпН, роЗроирпНродрокрпН рокрпЖропро░ро┐ро▓рпН рокроХрпНроХроЩрпНроХро│рпН роПродрпБроорпН роЗро▓рпНро▓рпИ. 'Page:' роорпБройрпНройрпКроЯрпНроЯрпБ роЗройрпНро▒ро┐ Index рокрпЖропро░рпИ роороЯрпНроЯрпБроорпН роЗроЯро╡рпБроорпН.");
        }

        const pages = listRes.query.allpages;
        const pageIds = pages.map(p => p.pageid);
        
        const qStats = { red: 0, yellow: 0, purple: 0, green: 0, total: pageIds.length };
        const users = {};

        // 2. рокроХрпНроХроЩрпНроХро│ро┐ройрпН родро▒рпНрокрпЛродрпИроп роиро┐ро▓рпИропрпИ Batch роорпБро▒рпИропро┐ро▓рпН роЖропрпНро╡рпБ роЪрпЖропрпНродро▓рпН
        for (let i = 0; i < pageIds.length; i += 50) {
            const batch = pageIds.slice(i, i + 50).join('|');
            const detailUrl = `${API}&action=query&prop=proofread|revisions&rvprop=user&pageids=${batch}&format=json`;
            const detailRes = await fetch(detailUrl).then(r => r.json());
            
            if (detailRes.query && detailRes.query.pages) {
                Object.values(detailRes.query.pages).forEach(p => {
                    if (p.proofread) {
                        const lvl = p.proofread.level;
                        if (lvl == 1) qStats.yellow++;
                        else if (lvl == 2) qStats.purple++;
                        else if (lvl == 3) qStats.green++;
                        else qStats.red++;

                        // роХроЯрпИроЪро┐родрпН родрпКроХрпБрокрпНрокро╛ро│ро░рпИ роОроЯрпБродрпНродро▓рпН
                        if (p.revisions && p.revisions[0]) {
                            const u = p.revisions[0].user;
                            users[u] = (users[u] || 0) + 1;
                        }
                    }
                });
            }
        }

        renderResults(book, qStats, users);
    } catch (err) {
        alert("роХро╡ройро┐роХрпНроХ: " + err.message);
    } finally {
        document.getElementById("loader").style.display = "none";
    }
}

function renderResults(title, q, users) {
    document.getElementById("results").style.display = "block";
    document.getElementById("displayTitle").innerText = "рокрпБродрпНродроХроорпН: " + title;
    
    // Progress UI
    const percent = Math.round((q.green / q.total) * 100);
    document.getElementById("mainProgress").style.width = percent + "%";
    document.getElementById("progressSummary").innerText = `роорпБро┤рпБроорпИропро╛роХ роЙро▒рпБродро┐ роЪрпЖропрпНропрокрпНрокроЯрпНроЯродрпБ: ${percent}% (${q.green}/${q.total} рокроХрпНроХроЩрпНроХро│рпН)`;

    // User Table
    const sorted = Object.entries(users).sort((a, b) => b[1] - a[1]);
    document.getElementById("contributorBody").innerHTML = sorted.map(([name, count]) => `
        <tr>
            <td><b>${name}</b></td>
            <td>${count}</td>
            <td>${((count/q.total)*100).toFixed(1)}%</td>
        </tr>
    `).join('');

    // Chart
    if (chartInstance) chartInstance.destroy();
    chartInstance = new Chart(document.getElementById("qualityDoughnut"), {
        type: 'doughnut',
        data: {
            labels: ['роЪро┐ро╡рокрпНрокрпБ', 'роороЮрпНроЪро│рпН', 'роКродро╛', 'рокроЪрпНроЪрпИ'],
            datasets: [{
                data: [q.red, q.yellow, q.purple, q.green],
                backgroundColor: ['#d93025', '#f9ab00', '#a142f4', '#188038']
            }]
        },
        options: { plugins: { legend: { position: 'bottom' } } }
    });
}
</script>
</body>
